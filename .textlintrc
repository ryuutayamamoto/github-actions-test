{
  "rules": {
    "no-todo": true,
    "preset-ja-technical-writing": true,
    "preset-jtf-style": true,
    "textlint-rule-ng-word": {
      "words": ["hoge","fuga","id","Id","http://","https://", "archetyp.jp","dev.archetyp.jp",
        "wh(?:[oy]|e(?:re|n)|at)"
      ]
    }
  },
  "plugins": {
    "html": {
      "extensions": [".php", ".liquid", ".js"]
    }
  }
}